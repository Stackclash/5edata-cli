{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,        // Useful for npm publishing
    "sourceMap": true,          // Helpful during development
    "incremental": true         // Faster rebuilds during development
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}