{
  "name": "5edata-cli",
  "type": "module",
  "version": "0.0.0",
  "author": "Richard Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Stackclash/5edata-cli/issues"
  },
  "homepage": "https://github.com/Stackclash/5edata-cli#readme",
  "description": "NodeJS cli tool to convert 5etools JSON to markdown files",
  "keywords": [
    "ttrpg",
    "5etools",
    "markdown"
  ],
  "main": "dist/index.js",
  "bin": {
    "5edata-cli": "dist/index.js"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "npm run build && npm start",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "build:standalone": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/cli.js --external:fsevents",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackclash/5edata-cli.git"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@types/node": "^24.5.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "json"
    ],
    "collectCoverageFrom": [
      "**/*.(controller|service|interceptor).(t|j)s"
    ],
    "coverageDirectory": "../coverage/unit",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "**/*.ts": [
    ]
  }
}
