{
  "name": "ttrpg-data-forge",
  "version": "0.0.0",
  "type": "module",
  "author": "Richard Cox <cox.richard200@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TTRPG-Data-Forge/core.git"
  },
  "bugs": {
    "url": "https://github.com/TTRPG-Data-Forge/core/issues"
  },
  "homepage": "https://ttrpg-data-forge.github.io/core/",
  "description": "NodeJS cli tool to convert 5etools JSON to markdown files",
  "keywords": [
    "ttrpg",
    "ttrpg-data-forge",
    "cli",
    "oclif"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "forge": "bin/run.js"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "build": "shx rm -rf dist && tsc -b",
    "dev": "npm run build && node bin/dev.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha \"test/**/*.test.ts\"",
    "docs": "oclif readme --multi --output-dir=docs/commands"
  },
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-plugins": "^5.4.47",
    "@oclif/plugin-version": "^2.2.33"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10",
    "@types/node": "^24",
    "@types/sinon": "^17.0.4",
    "chai": "^5.0.0",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "mocha": "^11",
    "oclif": "^4",
    "shx": "^0.4.0",
    "ts-node": "^10",
    "typescript": "^5",
    "sinon": "^21.0.0"
  },
  "oclif": {
    "bin": "forge",
    "scope": "ttrpg-data-forge",
    "pluginPrefix": "forge-plugin",
    "binAliases": [
      "ttrpg-data-forge"
    ],
    "dirname": "ttrpg-data-forge",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-version",
      "@oclif/plugin-plugins"
    ],
    "topicSeparator": " ",
    "topics": {
      "collect": {
        "description": "collects data for all source plugins"
      },
      "generate": {
        "description": "generates output from collected data"
      }
    },
    "macos": {
      "identifier": "com.stackclash.ttrpg-data-forge"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint",
      "npm test --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
