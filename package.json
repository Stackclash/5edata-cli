{
  "name": "@stackclash/ttrpg-data-forge",
  "version": "0.0.0",
  "type": "module",
  "author": "Richard Cox <cox.richard200@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackclash/ttrpg-data-forge.git"
  },
  "bugs": {
    "url": "https://github.com/Stackclash/ttrpg-data-forge/issues"
  },
  "homepage": "https://stackclash.github.io/ttrpg-data-forge/",
  "description": "NodeJS cli tool to convert 5etools JSON to markdown files",
  "keywords": [
    "ttrpg",
    "5etools",
    "markdown",
    "oclif"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "forge": "bin/run.js"
  },
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "files": [
    "./bin",
    "./dist",
    "./oclif.manifest.json"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "postpack": "shx rm -f oclif.manifest.json",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "docs": "oclif readme --multi --output-dir=docs/commands"
  },
  "dependencies": {
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "@oclif/plugin-version": "^2.2.33",
    "axios": "^1.12.2",
    "handlebars": "^4.7.8",
    "octokit": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^5",
    "@types/mocha": "^10",
    "@types/node": "^24",
    "chai": "^6",
    "eslint": "^9",
    "eslint-config-oclif": "^6",
    "eslint-config-prettier": "^10",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "mocha": "^11",
    "oclif": "^4",
    "shx": "^0.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "oclif": {
    "bin": "forge",
    "binAliases": [
      "ttrpg-data-forge"
    ],
    "dirname": "ttrpg-data-forge",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-version"
    ],
    "topicSeparator": " ",
    "topics": {
      "5etools": {
        "description": "Interact with 5etools JSON"
      }
    },
    "macos": {
      "identifier": "com.stackclash.ttrpg-data-forge"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint",
      "npm test --bail --findRelatedTests --passWithNoTests"
    ]
  }
}
